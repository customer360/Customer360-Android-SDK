<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cus_default_backgroud_color"
    android:orientation="vertical" >
    
    <include layout="@layout/view_custom_progress_dialog"/>

    <ListView
        android:id="@+id/listViewChatHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    
    <TextView 
        android:id="@+id/txtRecordNotFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No conversation is recorded for this chat"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_centerInParent="true"/>

</RelativeLayout>