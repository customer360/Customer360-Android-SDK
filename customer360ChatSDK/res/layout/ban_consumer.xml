<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="User Barred from Chat"
        android:layout_margin="24dp"
        android:textColor="#4293c2"
        android:textSize="16sp"
        />
    
    <TextView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="One of our Agent has added you to a restricted list. As a result, you are banned from starting a chat. If you believe this is wrongly done, please reach out to us at our support email ID"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />
    
    <TextView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="Your message has been opened as a ticket."
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        />
    
    <TextView 
        android:id="@+id/txtTicketMessageIfSet"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:text="Your Ticket Reference #00000000."
        android:layout_marginLeft="24dp"
        />
    
    
</LinearLayout>