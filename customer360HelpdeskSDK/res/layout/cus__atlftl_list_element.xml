<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cus_atlftl_ll_attachmentWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/cus_atlftl_ll_contentWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/cus_active_inactive_ticket_arraow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/inactive_ticket" />
        
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_weight="1"
	        android:orientation="vertical" >

        <TextView
            android:id="@+id/cus_atlftl_tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/cus_atlftl_tv_text_layout_marginRight"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:src="@drawable/cus_action_cancel"
            android:text="sample Ticket Title text"
            android:textSize="@dimen/cus_atlftl_tv_text_textSize"
            android:textColor="@color/cus_text_color" />
        
        <!-- <TextView
            android:id="@+id/txtTicketStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cus_atlftl_tv_text_layout_marginLeft"
            android:layout_marginRight="@dimen/cus_atlftl_tv_text_layout_marginRight"
            android:textSize="14sp"
            android:singleLine="true"
            android:src="@drawable/cus_action_cancel"
            android:visibility="gone"
            android:text="(ticket status)" /> -->
        
        </LinearLayout>

        <ImageView
            android:id="@+id/cus_atlftl_iv_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/arrow" />
    </LinearLayout>

