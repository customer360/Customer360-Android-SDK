<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/cus_default_backgroud_color" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_low" >

        <TextView
            android:id="@+id/cus_atlftl_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:maxLength="32"
            android:textColor="@color/cus_listing_text_color"
            android:textSize="@dimen/default_text_size_plus_2" />

        <TextView
            android:id="@+id/txtLastConversation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cus_atlftl_tv_text"
            android:text=""
            android:maxLength="32"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="May13, 04:04 AM"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/default_text_size_minus_2" />

        <RelativeLayout
            android:id="@+id/replyCountParent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtTime"
            android:background="@drawable/cus_circular_shape"
            android:layout_marginTop="4dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/txtAgentReplyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_centerInParent="true"
                android:textColor="@color/cus_default_text_color"
                android:textSize="@dimen/default_text_size_minus_2" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
