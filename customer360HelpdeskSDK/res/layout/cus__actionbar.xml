<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cusab_rl_actionbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cus_actbar_height"
    android:background="@color/cus_actbar_bg_holo_light"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/cusab_ll_actionbar_contentHodler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/activity_margin_low"
        android:orientation="horizontal" >

        <RelativeLayout
             android:id="@+id/cusab_ll_actionbar_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin_low"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/cusab_iv_up"
                    android:layout_width="@dimen/activity_header_back_logo_width_height"
                    android:layout_height="@dimen/activity_header_back_logo_width_height"
                    android:layout_marginLeft="@dimen/activity_margin_very_low"
                    android:src="@drawable/back"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/cusab_iv_logo"
                    android:layout_width="@dimen/activity_margin_medium_high"
                    android:layout_height="@dimen/activity_margin_medium_high"
                    android:layout_margin="@dimen/activity_margin_default"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/cusab_tv_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="CCAvenue"
                    android:textColor="@color/cus_actbar_txtcolor_holo_light"
                    android:textSize="@dimen/default_text_size_plus_6" />
            </LinearLayout>
        </RelativeLayout>
        
        <TextView android:id="@+id/txtStartNewChat"
            android:layout_width="@dimen/activity_margin_medium_high"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="New"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone" />
        
        <ImageView android:id="@+id/saveTicket"
            android:layout_width="@dimen/activity_margin_medium_low"
                    android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:src="@drawable/save_ticket"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackground" />
        
    </LinearLayout>

    <!--
         <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cus_divider_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cus__actionbar_shadow" />
    -->

</RelativeLayout>