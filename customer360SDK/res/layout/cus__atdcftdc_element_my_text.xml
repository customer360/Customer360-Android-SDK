<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cus_atdcftdcemt_ll_attachmentWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/cus_atdcftdcemt_ll_contentWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/cus_atdcftdcemt_ll_contentWrapper2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cus_atdcftdcemt_ll_contentWrapper2_layout_margin"
            android:layout_weight="0.8"
            android:background="@drawable/cus_round_shape_default"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/cus_atdcftdcemt_ll_contentWrapper2_padding" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#C8C8C8"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/cus_atdcftdcemt_ll_contentWrapper4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cus_round_shape_default"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/cus_atdcftdcemt_iv_Icon"
                    android:layout_width="@dimen/cus_atdcftdcemt_iv_Icon_layout_width"
                    android:layout_height="@dimen/cus_atdcftdcemt_iv_Icon_layout_height"
                    android:layout_marginRight="@dimen/cus_atdcftdcemt_iv_Icon_layout_marginRight"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/circle_agent" />

                <LinearLayout
                    android:id="@+id/cus_atdcftdcemt_ll_contentWrapper3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cus_atdcftdcemt_tv_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Miley Cyrus"
                        android:textColor="#000"
                        android:alpha="0.45"
                        android:textSize="@dimen/cus_atdcftdcemt_tv_Name_textSize" />

                    <TextView
                        android:id="@+id/cus_atdcftdcemt_tv_Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:text="sample Ticket Tittle text"
                        android:textColor="#333"
                        android:textSize="@dimen/cus_atdcftdcemt_tv_Text_textSize" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#C8C8C8"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/cus_atdcftdcemt_ll_PlaceHolerAttachments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cus_round_shape_default"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone" >

                <include layout="@layout/cus__atdcftdc_element_attachment" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/cus_atdcftdcemt_v_emptyspace"
            android:layout_width="@dimen/cus_atdcftdcemt_v_emptyspace_layout_width"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>