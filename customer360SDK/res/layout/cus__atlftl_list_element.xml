<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cus_atlftl_ll_attachmentWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/cus_atlftl_ll_contentWrapper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cus_atlftl_ll_contentWrapper_layout_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/cus_active_inactive_ticket_arraow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/inactive_ticket" />

        <TextView
            android:id="@+id/cus_atlftl_tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cus_atlftl_tv_text_layout_marginLeft"
            android:layout_marginRight="@dimen/cus_atlftl_tv_text_layout_marginRight"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:src="@drawable/cus_action_cancel"
            android:text="sample Ticket Tittle text"
            android:textSize="@dimen/cus_atlftl_tv_text_textSize" />

        <ImageView
            android:id="@+id/cus_atlftl_iv_arrow"
            android:layout_width="@dimen/cus_atlftl_iv_arrow_layout_width"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/cus_atlftl_iv_arrow_layout_marginRight"
            android:padding="@dimen/cus_atlftl_iv_arrow_padding"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <View
        android:id="@+id/cus_atlftl_v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cus_atlftl_v_divider_layout_height"
        android:background="#C8C8C8" />

</LinearLayout>